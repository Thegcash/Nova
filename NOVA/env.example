# Nova 2.0 Environment Variables
# Copy this to .env.local and fill in your values

# Supabase (required)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE=your-service-role-key-here

# OpenAI (required for LLM parser & narrator)
OPENAI_API_KEY=sk-...

# Slack (optional, for experiment notifications)
SLACK_WEBHOOK_EXPERIMENTS=https://hooks.slack.com/services/...

# Optional: For RLS testing with anon key
SUPABASE_ANON_KEY=your-anon-key-here

# Rate Limiting (optional, defaults shown)
RATE_LIMIT_LLM_PER_HOUR=10
RATE_LIMIT_BACKTESTS_PER_HOUR=20

# Filing Export (optional)
FILING_TTL_SECONDS=86400

# Next.js Public (for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
NEXT_PUBLIC_BASE_URL=http://localhost:3000

